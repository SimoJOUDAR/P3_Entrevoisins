<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.neighbour_list.NeighbourDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/detail_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_person_outline_24" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:background="@null">

            <TextView
                android:id="@+id/detail_avatar_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:includeFontPadding="false"
                android:paddingLeft="10dp"
                android:text="Name"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/detail_favorite_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/round_button"
                android:src="@drawable/ic_star_border_white_24dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                http:cardBackgroundColor="@android:color/white"
                http:cardElevation="10dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detail_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="20sp"
                        android:layout_margin="15dp"
                        />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/detail_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Adress"
                        android:layout_margin="10dp"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:drawablePadding="10dp"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/detail_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+33 0 00 00 00 00"
                        android:layout_margin="10dp"
                        android:drawableLeft="@drawable/ic_baseline_phone_24"
                        android:drawablePadding="10dp"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/detail_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="www.facebook.com"
                        android:layout_margin="10dp"
                        android:drawableLeft="@drawable/ic_baseline_public_24"
                        android:drawablePadding="10dp"/>

                </LinearLayout>


            </android.support.design.card.MaterialCardView>

            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                http:cardBackgroundColor="@android:color/white"
                http:cardElevation="10dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_cardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A propos de moi"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        />

                    <TextView
                        android:id="@+id/detail_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pas de prÃ©sentation disponible"
                        android:layout_margin="15dp"/>

                </LinearLayout>

            </android.support.design.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>


</ScrollView>